<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span4">
	    <%= render 'follow_form' if signed_in? %>
    <% if @user.myposts.any? %>
      <h3>myposts (<%= @user.myposts.count %>)</h3>
      <ol class="myposts">
        <%= render @myposts %>
      </ol>
      <%= will_paginate @myposts %>
    <% end %>
  </div>
  
    <div class="span4">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.pinposts.any? %>
      <h3>Pinposts (<%= @user.pinposts.count %>)</h3>
      <ol class="pinposts">
        <%= render @pinposts %>
      </ol>
      <%= will_paginate @pinposts %>
    <% end %>
  </div>
  
  </div>
</div>