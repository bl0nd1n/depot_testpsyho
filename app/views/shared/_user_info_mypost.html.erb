<a href="<%= user_path(@mypost.user) %>">		  <% if current_user.avatar.present? %>		    <%= image_tag(current_user.avatar, size: 72 )%>			<%else%>  <%= gravatar_for current_user, size: 72 %>  <%end%></a><h1>  <%= @mypost.user.name %></h1><span>  <%= link_to "view my profile", @mypost.user %></span><span>  <%= pluralize(@mypost.user.myposts.count, "Пост") %></span><span>  <%= pluralize(@current_user.reputation_value_for(:votes).to_i, "likes") %></span>